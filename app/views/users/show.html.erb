<body class='garage'>
  	<%= render 'layouts/header' %><br><br>
	<% if !current_user.vehicles.empty? %>
		<div class='chalkboard'><br>
			<% @vehicles.each do |vehicle| %>
			  <%= vehicle.make %>
			  <%= vehicle.model %>
			  <%=link_to image_tag("/images/tool.png", class: "tool", title: "Service " + vehicle.model), vehicle_path(vehicle.id)%><br><br>
			<%end%><br>
		<a href="/newvehicle">Add a Vehicle<a>
	<%else%>
		<h3>No vehicles stored</h3>
		<a href="/newvehicle">Add a Vehicle<a>
	<%end%>
	</div>
</body>
