<body class='welcome'>
  	<%= render 'layouts/header' %>
	<h2>Login</h2>
	<div class='forms'>
	  <%= form_tag '/login' do %>
	    <%= text_field_tag :email, nil, :placeholder => 'Email', :autocomplete => "off"%><br>
	    <%= password_field_tag :password, nil, :placeholder => 'Password', :autocomplete => "off"%><br>
	    <%= f.submit "Login", :type => :image, :src => image_path("/images/login.png") %><br>
	  <% end %>
	</div>
</body>
